import remote.HibFacadeBeanRemote;

public class FuneralRegistrationController {
	
	@FXML
	private GridPane gridPane;
	@FXML
	private Label funeralInformationLabel;
	@FXML
	private Label funeralRegistrationLabel;
	@FXML
