	@FXML
	private TextField postalCodeTextField;
	@FXML
	private TextField phoneNumberTextField;
	@FXML
	private TextField emailTextField;
	@FXML
	private TextField decFirstNameTextField;
	@FXML
	private TextField decLastNameTextField;
